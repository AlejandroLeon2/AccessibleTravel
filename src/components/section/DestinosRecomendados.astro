---
import CardDestino from "../ui/CardDestino.astro";
const {lenguaje, destinos}=Astro.props;
---

<section class="max-w-5xl mx-auto">
  <h2 class="text-4xl mx-auto max-w-5xl mt-8 px-4 font-semibold text-gray-900">
    {lenguaje.tituloRecomendado}
  </h2>
  <div
    class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-2 lg:grid-cols-3 px-4 py-8 gap-4 place-items-center"
  >
    {
      destinos.map((lugar) => (
        <CardDestino lenguaje={lenguaje} data={lugar} locacion={lugar.title} />
      ))
    }
  </div>
</section>
