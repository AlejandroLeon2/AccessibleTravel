---

const {lenguaje, articulo}=Astro.props;

---

<section class="max-w-5xl py-4 mx-auto px-4 md:px-0 lg:px-0">
  <h2 class="font-semibold col-span-2 text-4xl py-4 lg:col-span-1">
    {lenguaje.tituloPublicaciones}
  </h2>
  <ul class="space-y-4">
    {
      articulo.slice(0, 3).map((newsa) => (
        <article class="flex gap-4  border border-gray-200 max-h-30 shadow">
          <a href={`${newsa.url}`} class="flex">
            <img
              src={newsa.frontmatter.image ?? "/images/default-news.jpg"}
              alt={newsa.frontmatter.title}
              class="w-full max-w-45  rounded object-cover "
            />
          </a>

          <div class="w-auto py-2">
            <a
              href={`${newsa.url}`}
              class="text-sm md:text-xs line-clamp-3  font-semibold text-gray-800 hover:text-blue-600"
            >
              {newsa.frontmatter.title}
            </a>
            
            <time class="block text-xs text-gray-500">
              {newsa.frontmatter.date}
            </time>
          </div>
        </article>
      ))
    }
  </ul>
</section>
