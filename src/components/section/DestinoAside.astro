---
import CardAsideDestinos from "../ui/CardAsideDestinos.astro";
const {lenguaje, destinos =[] ,style="text-4xl"}=Astro.props;
---

<section class="max-w-5xl px-4 md:px-0 mx-auto">
  <h2 class={`${style} mx-auto max-w-5xl line-clamp-2 font-semibold text-gray-900`}>
    {lenguaje.tituloRecomendado}
  </h2>
  <div
    class="flex flex-col  py-4 gap-4 "
  >
    {
      destinos.map((lugar) => (
        <CardAsideDestinos lenguaje={lenguaje} data={lugar} locacion={lugar.title} />
      ))
    }
  </div>
</section>
