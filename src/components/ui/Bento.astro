---
const {currentLocale}=Astro;
const {destinos, lenguaje}=Astro.props;
---

<style>

@media (min-width: 768px) {
  .bento-grid {
    display: grid;
    grid-template-columns: repeat(5, 1fr);
    grid-auto-rows: 250px;
    gap: 1rem;
    
    /* o eliminar height fija si prefieres scroll */
  }

  /* Posiciones especÃ­ficas para los 6 primeros */
  .bento-grid > :nth-child(1) {
    grid-column: 1 / span 3;
    grid-row: 1 / span 2;
    
  }

  .bento-grid > :nth-child(2) { grid-column: 4 / span 2; grid-row: 1; }
  .bento-grid > :nth-child(3) { grid-column: 4 / span 2; grid-row: 2; }
  .bento-grid > :nth-child(4) { grid-column: 1 /span 2; grid-row: 3; }
  .bento-grid > :nth-child(5) { grid-column: 3 / span 3; grid-row: 3; }
  .bento-grid > :nth-child(6) { grid-column: 1 / span 3; grid-row: 4; }

  /* ðŸ†• Destinos 7+ se colocan automÃ¡ticamente en nuevas filas */
  .bento-grid > :nth-child(n+7) {
    grid-column: 4/ span 2;
    grid-row:auto;
  }
}

</style>

<section class="bento-grid space-y-2 px-4 py-6 h-full  mx-auto max-w-6xl">
  {destinos.map((item , index) => (
    <a href={`/${currentLocale}/destino/${item.titleLink}`} class={`block rounded-xl overflow-hidden shadow-md hover:shadow-lg transition group `}>
      <div class="relative flex flex-col w-full h-full  text-white">
        <img src={item.url ? item.url : "/images/gato.jpg" } alt={`Imagen de ${item.title}`} class="object-cover w-full h-full min-h-70 group-hover:scale-105 transition duration-300" />
          <h3 class="text-xl absolute bottom-2 left-2 font-semibold">Tour {item.title}</h3>
          <p class="text-md  absolute top-2 py-2 px-4 bg-black/50 rounded-xl border border-gray-300 right-2">{item.destinosEN?item.destinosEN.length:"0"} tours disponibles</p>
      </div>
    </a>
  ))}
</section>
