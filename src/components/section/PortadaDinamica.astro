---
const page = {
  title: "TOUR, VIAJES Y CAMPAMENTO DE AVENTURA",
  subtitle: "¡Bienvenido a Accessible Travel Peru! Somos una agencia de viajes especializada en turismo accesible, confiable y profesional. Ofrecemos experiencias únicas por Perú",
};

const posts = [
  { alt: "Cliff view", src: "/images/gato.jpg" },
  { alt: "Hiking rocky terrain", src: "/images/gato.jpg" },
  { alt: "Tent near lake", src: "/images/gato.jpg" },
  { alt: "Forest walk", src: "/images/gato.jpg" },
  { alt: "Camping setup", src: "/images/gato.jpg" },
];
---

<section
  class="bg-white flex justify-center items-center relative  mx-auto"
>
  <button
    id="prev-btn"
    class="absolute w-10 h-10 active:scale-95 hover:scale-105 duration-300 left-2 z-10 bg-white/40 rounded-full p-2 shadow hover:bg-white active:bg-white transition"
  >
    ◀
  </button>
  <div class="absolute mx-auto max-w-4xl left-0 right-0 px-4">
    <h2 class=" md:text-4xl text-2xl text-center font-bold text-azul-travel">{page.title}</h2>
    <p class=" text-sm md:text-lg text-white mt-2">{page.subtitle}</p>
  </div>
  <div class="flex  w-full mx-auto max-w-4xl text-white justify-start items-center gap-4 absolute bottom-8 ">
 <a href="#" class=" px-4 py-2 rounded-full bg-gray-700 duration-300 active:bg-azul-travel active:text-white hover:bg-azul-travel hover:scale-105 active:scale-95 hover:text-white">Reservas</a>
  <a href="/aboutUs" class=" px-4 py-2 rounded-full bg-gray-700 duration-300 active:bg-azul-travel active:text-white hover:bg-azul-travel hover:scale-105 active:scale-95 hover:text-white"> Quiénes somos</a>
  
  </div>
 <img
    id="slider-image"
    src={posts[0].src}
    alt={posts[0].alt}
    class="w-full h-[50svh] max-h-150 object-cover transition duration-500 ease-in-out"
  />

  <button
    id="next-btn"
    class="absolute w-10 h-10 active:scale-95 hover:scale-105 duration-300 right-2 z-10 bg-white/40 text-center rounded-full p-2 shadow hover:bg-white active:bg-white transition"
  >
    ▶
  </button>
</section>

<script is:inline>
  document.addEventListener("DOMContentLoaded", () => {
    const images = [
      { alt: "Cliff view", src: "/images/gato.jpg" },
      { alt: "Hiking rocky terrain", src: "/images/nice.jpeg" },
      { alt: "Tent near lake", src: "/images/gato.jpg" },
      { alt: "Forest walk", src: "/images/gato.jpg" },
      { alt: "Camping setup", src: "/images/gato.jpg" },
    ];

    let index = 0;
    const imgEl = document.getElementById("slider-image");
    const prevBtn = document.getElementById("prev-btn");
    const nextBtn = document.getElementById("next-btn");

    const updateImage = (i) => {
      index = i;
      imgEl.src = images[i].src;
      imgEl.alt = images[i].alt;
    };

    prevBtn.addEventListener("click", () => {
      index = (index - 1 + images.length) % images.length;
      updateImage(index);
    });

    nextBtn.addEventListener("click", () => {
      index = (index + 1) % images.length;
      updateImage(index);
    });

    setInterval(() => {
      index = (index + 1) % images.length;
      updateImage(index);
    }, 10000);
  });
</script>
