---
import Mail from "../svg/Mail.astro";
import Telefono from "../svg/Telefono.astro";
import Ubicacion from "../svg/Ubicacion.astro";
import Youtube from "../svg/Youtube.astro";
import Tiktok from "../svg/Tiktok.astro";
import empresaInfo from "../../data/accessibleTravel.json";
const { currentLocale } = Astro;
const { lenguaje } = Astro.props;
---

<!-- Modal Toggle Button --><!-- Modal Container -->
<div
  id="contactModal"
  class="fixed top-0 right-0 translate-x-130 min-h-svh bg-black/20 flex justify-end z-50 transition duration-300"
>
  <!-- Modal Content -->
  <div class="bg-white shadow-xl w-full max-w-xs relative p-4">
    <!-- Close Button -->
    <button
      id="closeModalBtn"
      class="absolute top-3 right-3 text-black hover:text-red-700"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="w-6 h-6"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M6 18L18 6M6 6l12 12"></path>
      </svg>
    </button>

    <div class="flex flex-col items-center space-y-2">
      <img
        src="/images/logos/LOGOATPsinfondo.webp"
        alt="Logo Accessible Travel"
        class="w-50 h-auto"
      />
      <p class="text-sm text-gray-600">{lenguaje.descripcionAccessible}</p>
    </div>

    <!-- InformaciÃ³n de contacto -->
<ul class="mt-6 space-y-3 text-sm text-gray-700">
  <li class="flex items-center gap-2">
    <Ubicacion style="text-azul-travel w-7" />
    <span>{empresaInfo.direccion.toLowerCase()}</span>
  </li>

  {empresaInfo.telefonos.map((t, index) => (
    <li  class="flex items-center gap-2">
      <Telefono style="text-azul-travel w-7" />
      <a
        href={`${t.url}`}
        target="_blank"
        rel="noopener noreferrer"
        class="hover:text-azul-travel hover:underline break-all"
      >
        {t.numero} {t.pais}
      </a>
    </li>
  ))}

  <li class="flex items-center gap-2">
    <Mail style="text-azul-travel w-6" />
    <a
      href={`mailto:${empresaInfo.correo}`}
      class="hover:text-azul-travel hover:underline break-all"
    >
      {empresaInfo.correo}
    </a>
  </li>
</ul>


    <div class="mt-6 grid grid-cols-3 justify-items-center gap-4">
      {
        empresaInfo.redes.map((red) => (
          <a
            href={red.url}
            target="_blank"
            aria-label={`${red.icono} de Accessible Travel Peru`}
            class="p-2 rounded-full bg-gray-100 text-black hover:bg-azul-travel hover:text-white transition-colors"
          >
            {red.icono === "facebook" && (
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M22 12a10 10 0 10-11.5 9.9v-7h-2v-3h2v-2.2c0-2 1.2-3.1 3-3.1.9 0 1.8.2 1.8.2v2h-1c-1 0-1.3.6-1.3 1.2V12h2.3l-.4 3h-1.9v7A10 10 0 0022 12z" />
              </svg>
            )}
            {red.icono === "tiktok" && (
              <Tiktok style="w-6 w-5 hover:fill-white fill-black" />
            )}
            {red.icono === "youtube" && (
              <Youtube style="w-6 w-5 hover:fill-white fill-black" />
            )}
            {red.icono === "instagram" && (
              <svg
                class=" w-6 h-6"
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 24 24"
                fill="currentColor"
              >
                <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zM12 0C8.741 0 8.333.014 7.053.072 2.695.272.273 2.69.073 7.052.014 8.333 0 8.741 0 12c0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98C8.333 23.986 8.741 24 12 24c3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98C15.668.014 15.259 0 12 0zm0 5.838a6.162 6.162 0 100 12.324 6.162 6.162 0 000-12.324zM12 16a4 4 0 110-8 4 4 0 010 8zm6.406-11.845a1.44 1.44 0 100 2.881 1.44 1.44 0 000-2.881z" />
