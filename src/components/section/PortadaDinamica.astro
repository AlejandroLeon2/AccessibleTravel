---
import FlechaCorta from "../svg/FlechaCorta.astro";

const {lenguaje} =Astro.props;
---

<section class="bg-white flex justify-center items-center relative mx-auto">
  <button
    id="prev-btn"
    class="absolute  active:scale-95 hover:scale-105 duration-300 left-1 z-10 bg-white/30 rounded-full p-2 shadow hover:bg-white active:bg-white transition"
  >
    <FlechaCorta style="rotate-90"/>
  </button>
  <div
    class="absolute mx-auto flex justify-start items-center h-full bg-black/20 left-0 right-0 px-12"
  >
    <h2
      id="slider-title"
      class="max-w-xs text-4xl sm:text-5xl md:text-6xl lg:text-7xl lg:max-w-xl font-bold text-white"
    >
      {lenguaje.banners[0].title}
    </h2>
  </div>
  <img
    id="slider-image"
    src={lenguaje.banners[0].src}
    alt={lenguaje.banners[0].alt}
    class="w-full h-[50svh] min-h-100 max-h-150 object-cover transition duration-500 ease-in-out"
  />

  <button
    id="next-btn"
    class="absolute active:scale-95 hover:scale-105 duration-300 right-2 z-10 bg-white/30 text-center rounded-full p-2 shadow hover:bg-white active:bg-white transition"
  >
    <FlechaCorta style="-rotate-90"/>
  </button>
</section>


